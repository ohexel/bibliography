}

@inproceedings{xu_effect_2016,
    address = {Washington, D.C.},
    title = {The {Effect} of {Family} {Size} on {Intergenerational} {Financial} {Transfers}: {Evidence} from {China}'s {One}-{Child} {Policy}},
