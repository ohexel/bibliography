}

@inproceedings{rauscher_plastic_2016,
    address = {Washington, D.C.},
    title = {Plastic and {Immobile}: {Unequal} {Intergenerational} {Mobility} by {Genetic} {Sensitivity} {Score} {Within} {Sibling} {Pairs}},
    url = {https://paa.confex.com/paa/2016/meetingapp.cgi/Paper/2024},
    abstract = {Evidence suggests genotypes previously construed as risky may instead increase sensitivity. This differential susceptibility model could help explain why some children follow in their parents’ financial footsteps, reproducing inequality between generations, while others experience greater mobility. I use family fixed effects models of sibling data from the National Longitudinal Survey of Adolescent to Adult Health (supplemented by Wisconsin Longitudinal Study data) to investigate whether an index of sensitive genotypes moderates parent-child economic similarity. Comparisons of full, same sex siblings hold constant parental characteristics and address the non-random distribution of genotype in general populations. Compared to their same sex sibling, evidence suggests young adults with more copies of sensitive genotypes achieve lower income and earnings if their parents were low income but achieve higher financial standing if parents were high income. Results of this study contradict simplistic genetic explanations for intergenerational inequality and suggest sensitivity entails lower intergenerational mobility.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Rauscher, Emily},
    month = apr,
    year = {2016},
    notes = {https://paa.confex.com/paa/2016/mediafile/ExtendedAbstract/Paper2024/Rauscher%20Plastic%20and%20Immobile%20-%20IRP%2011-30-15%20PAA.pdf}
}

@inproceedings{amaral_meta_2016,
    address = {Washington, D.C.},
    title = {A {Meta}-{Regression} {Analysis} of {Intergenerational} {Transmission} of {Income} and the {Great} {Gatsby} {Curve}},
    url = {https://paa.confex.com/paa/2016/meetingapp.cgi/Paper/6555},
    abstract = {Our overall aim is to understand the association between income inequality and intergenerational transmission of income (degree to which conditions at birth and childhood determine socioeconomic situation later in life). Causality is hard to establish, because both income inequality and inequality in opportunity are results of complex social and economic outcomes. We analyze whether this correlation is observed across countries and time (as well as within countries), in a context of recent increases in income inequality. We investigate Great Gatsby curves and perform meta-regression analyses based on several papers on this topic. Results suggest that countries with high levels of inequality tend to have higher levels of inequality of opportunity. Intergenerational income elasticity has stronger associations with Gini coefficient, compared to associations with top one percent income share. Once fixed effects are included for each country, these correlations lose significance.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Amaral, Ernesto and Perez Arce, Francisco},
    month = apr,
    year = {2016},
    notes = {https://paa.confex.com/paa/2016/mediafile/ExtendedAbstract/Paper6555/6555-Inequality_paper.pdf}
}

@inproceedings{chauvel_viscosity_2016,
    address = {Washington, D.C.},
    title = {More {Inequality}, {More} {Viscosity}? {Intergenerational} {Mobility} in {International} {Comparison}},
    url = {https://paa.confex.com/paa/2016/meetingapp.cgi/Paper/6597},
    abstract = {The Great Gatsby Curve (GGC) expresses the positive correlation of income inequality and of intergenerational income “elasticity”, ie the degree to which (dis)advantages are “inherited” over generations. The robustness of the GGC has been debated in recent economic and sociological literature, but it remains a relevant result.

This paper analyzes this relationship with data from the U.S. (PSID) and 26 European countries (Survey on Income and Living Conditions, EU-SILC), which allows both economic and sociological approaches (kappa of the unidiff model Xie 1992). We first propose an alternative to the conventional measurement of elasticity (“logit rank” that is distribution neutral). We then compare income based GGC to the ones based on the sociological tradition of unidiff. Our new tool shows more modest GGC correlation, but the remaining link remains substantial. Secondly, we show the contrast between income based and class based approaches and suggest more interest in sociology for income.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Chauvel, Louis and Hartung, Anne},
    month = apr,
    year = {2016},
    notes = {https://paa.confex.com/paa/2016/mediafile/ExtendedAbstract/Paper6597/CHAUVEL%20HARTUNG%20PAA2016.pdf}
}

@inproceedings{song_linked_2016,
    address = {Washington, D.C.},
    title = {Linked {Lives}, {Linked} {Trajectories}: {Intergenerational} {Association} of {Intragenerational} {Income} {Mobility}},
    url = {https://paa.confex.com/paa/2016/meetingapp.cgi/Paper/7565},
    abstract = {This study examines whether and how intragenerational income mobility trajectories are linked across generations. We characterize individuals’ life course income trajectories by three parameters—initial position, grow rates, and volatility—and test intergenerational associations in these parameters. Unlike most intergenerational social mobility research that measures economic status in each generation based on a snapshot approach, we incorporate a life course perspective into the transmission of economic status across generations. In our approach, changes in economic status during one’s lifetime are not simply considered as residuals, measurement errors, or transitory fluctuations that lead to biased mobility estimates, but as an essential feature of social status that is inheritable and transmissible. Drawing on longitudinal data from the Panel Study of Income Dynamics (1968-2013), our preliminary results suggest that income trajectory in the parent generation, both its growth patterns and amount of fluctuations, has important implications for income inequality in the subsequent generation.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Song, Xi},
    month = apr,
    year = {2016},
    notes = {https://paa.confex.com/paa/2016/mediafile/ExtendedAbstract/Paper7565/XS-SC%202016%20extended.pdf}
}

@inproceedings{karraker_variation_2016,
    address = {Washington, D.C.},
    title = {Between- and {Within}-{Family} {Variation} in {Parental} {Financial} {Support} to {Adult} {Children} {Across} {Three} {Generations}},
    url = {https://paa.confex.com/paa/2016/meetingapp.cgi/Paper/3627},
    abstract = {Using the newly-available Family Roster and Transfer Module (2013) from the Panel Study of Income Dynamics, we examine between- and within-family variation in parental financial support to adult children (for education, buying a home, and/or other financial help) across three generations. Our project asks two questions. First, what predicts between-family differences in parental financial support across three generations? Second what predicts within-family differences in parental financial support to specific children across three generations? We will use multilevel models of parent-child dyads nested within families to examine factors that impact between- and within-family variation in parental financial support. By documenting patterns of parental financial support across three generations both between and within families, we contribute to an emerging body of research on the role of multigenerational processes in social stratification and the intergenerational transmission of advantage.},
