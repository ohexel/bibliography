    title = {Family Formation during the Baby Boom: Canadian Marriage Trends in Perspective},
    url = {https://paa2015.princeton.edu/papers/152165},
    abstract = {The Baby Boom was as much—if not more—a boom in marriages, than a boom in the number of births and other fertility indicators. We use in this paper newly available census micro-level data to document marriage patterns in Canada during the 20th Century and contrast them according to socioeconomic and cultural variables, in the two most populous provinces of Quebec and Ontario. The baby boom unfolded very differently in these two provinces, with Quebec couples still experiencing a decline in marital fertility during that period, but changes affecting marriage patterns appear to have been very similar. Yet, how many people did get married and at what age was strongly differentiated culturally and socially. The picture that emerges from these analyses is used to examine more closely what could have been the major causes of this rather sudden appetite for marriage.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Gavreau, Danielle and Laplante, Beno\^it},
    month = apr,
    year = {2015}
}

@inproceedings{caron_marriage_2015,
    address = {San Diego, CA}
    title = {Marriage Patterns in Historical Perspective: What Can We Learn from Three Centuries of Marriages in Quebec?},
    url = {https://paa2015.princeton.edu/papers/153220},
    abstract = {The historical demographic literature on marriage has devoted a great deal of attention to understanding how and why age at marriage and the rate of celibacy were historically higher in North Western European countries. More recently, comparative work in a Eurasian perspective confirmed earlier and more universal marriages in Asia. On the other side, North America also had earlier ages at first marriages and lower rates of permanent celibacy than North Western Europe, but later marriage than Asia. This study will provide insights on marriage patterns in a region somewhere in the middle of North Western European and Asian marriage. We will explore how families and the context may have influenced jointly or separately the timing and probability of marriage in Quebec using three centuries of marriages and a large territory covering from sparsely populated and isolated parishes to densely populated cities like Québec and Montréal.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Caron, Marianne and Dillon, Lisa and Gagnon, Alain},
    month = apr,
    year = {2015}
}

@inproceedings{billari_social_2015,
    address = {San Diego, CA}
    title = {The Social Stratification of Choice in the Transition to Adulthood: A Comparative Perspective},
    url = {https://paa2015.princeton.edu/papers/152113},
    abstract = {This paper examines to what extent and through which mechanisms the socioeconomic background of young adults influences their family decisions in the transition to adulthood. We use data from two waves of the Generations and Gender Surveys to study this issue among young adults in six European countries (the Netherlands, Austria, France, Hungary, Bulgaria and Georgia). We find evidence that leaving home, entry into a first union and entry into parenthood are all socially stratified in (almost) all of these countries. We find additional evidence that part of this stratification results from the differential transmission of preferences and intentions among children with low and high SES backgrounds, and more limited evidence that differences in parental opportunities and resources between low and high SES families are important as well.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Billari, Francesco C. and Hiekel, Nicole and Liefbroer, Aart C.},
    month = apr,
    year = {2015}
}

@inproceedings{holland_how_2015,
    address = {San Diego, CA}
    title = {How Does Cohabitation Fit into the Family Life Course? Norms and Ideals in Europe},
    url = {https://paa2015.princeton.edu/papers/152901},
    abstract = {Whether life courses are shaped by social norms or are primarily governed by individual preferences is a matter of debate. In this paper we investigate whether non-marital cohabitation norms structure individuals’ understanding of how cohabitation fits into the ideal family life course. Using data from the European Social Survey (Round 3, 2006/07), we build a typology cohabitation across 23 survey countries. Then, using multi-level modeling techniques, we explore how normative contexts may condition an individual’s propensity to offer non-numeric responses to a question about the ideal age for cohabitation (i.e. ‘there is no ideal age’ or ‘never’ versus a numeric response), actual ideal ages for cohabitation, and the relative ideal timing of marriage and cohabitation. Results highlight the importance of gender, education and normative ‘permissiveness’ in conditioning perceptions of the ideal timing of cohabitation. Additionally, results suggest the emergence of positive norms for cohabitation within some contexts.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Holland, Jennifer A. and de Valk, Helga A. G.},
    month = apr,
    year = {2015}
}

@inproceedings{brandt_support_2014,
    address = {Boston, MA}
    title = {Support Networks of Older People in Europe: An Analysis with Data of the Survey of Health, Ageing and Retirement in Europe (SHARE)},
    url = {https://paa2014.princeton.edu/papers/143298},
    abstract = {Western societies age rapidly. Today, people do not only live longer, they also have less children. These developments exert considerable pressure on pension and health systems. Children are the most important source of support in old age, especially when there is no partner. In times of rising childlessness we thus face new challenges: On which support networks do childless older people rely? (How) can the lack of children be compensated? Who provides help and care? We assess the support networks of people aged 50 and over in 14 European countries based on the Survey of Health, Ageing and Retirement in Europe (SHARE). When comparing support networks of childless older people to parent`s networks we focus the importance of the extended family as well as public services. Our analyses show that private help for childless elders is often taken over by the extended family and neighbors. Intense care tasks, however, are mostly provided by public providers. The family and especially intergenerational relations play an important role for support in old age. When there are no children or children live far away, vital support for older persons has to be taken over by public providers in many cases. In countries with low social service provision, older people thus experience a lack of help more likely, especially when depending on vital care.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Brandt, Martina},
    month = may,
    year = {2014}
}

@inproceedings{goldberg_family_2014,
    address = {Boston, MA}
    title = {Family Structure History and Young Adults' Receipt of Financial Assistance for College},
    url = {https://paa2014.princeton.edu/papers/141901},
    abstract = {As youth take longer to transition to adulthood, families are being called on to support their children well past adolescence. High rates of single parenthood and family disruption may be interfering with families’ ability to provide this support. In the present study, I examine the association between young adults’ family structure history and their receipt of a particularly important resource from their family--financial assistance for college. Using data from the National Longitudinal Survey of Youth 1997 cohort (N = 3,081), I describe how young adults’ family structure history relates to their receipt of college assistance from their family, as well as which family members--including biological parents, stepparents, grandparents, and other relatives--provide this support. This study makes an important contribution to our understanding of how the structure and stability of the family of origin continue to shape children’s life chances even as they enter adulthood.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Goldberg, Julia S.},
    month = may,
    year = {2014}
}

@inproceedings{yeung_parental_2014,
    address = {Boston, MA}
    title = {Parental Spending on Children and Children’s Social-Emotional Development},
    url = {https://paa2014.princeton.edu/papers/142046},
    abstract = {This paper examines the causal relationship between parental spending on children and children’s social-emotional development. Extensive research has related children’s developmental outcomes to material resources through family income and wealth. However, scholars have long noted the inconsistency between reported income and expenditures. Spending on children is one of the most direct ways parents can invest in children. Hence expenditure on children is a more accurate measure of intergenerational transmission of economic resources to children. We use data from the PSID and its Child Development Supplement which provides child-specific expenditure data for a national longitudinal sample of children. We draw theories from multiple disciplines and use instrumental variable approach to address the endogeneity issue to establish the causal relationship. This study will contribute to the body of literature on the growing social and economic inequality for parents by social class and race and the implications for parenting and child outcomes.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Yeung, Wei-Jun Jean and Hao, Lingxin},
    month = may,
    year = {2014}
}

@inproceedings{sierminska_decomposing_2014,
    address = {Boston, MA}
    title = {Decomposing Household Wealth Portfolios across Countries: An Age-Old Question?},
    url = {https://paa2014.princeton.edu/papers/141741},
    abstract = {Using harmonized wealth data and a novel decomposition approach, we show that cohort effects exist in the income profiles of asset and debt portfolios for a sample of European countries, the U.S. and Canada. We find that younger households’ participation decisions in financial assets are more responsive to their income than older households. Additionally, younger households’ participation decisions respond more to to the institutional setting than mature households. We investigate why identical households in different countries invest differently and find that less financially developed and economically open countries favor investment in housing. There is also a link between mortgage use and the typical mortgage characteristics of each country. These findings have important implications for policy setting during times of financial unease, indicating a scope for policies which promote participation for young household and indicating which institutional features could be manipulated.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Sierminska, Eva M. and Doorley, Karina},
    month = may,
    year = {2014}
}

@inproceedings{lafave_measuring_2016,
    address = {Washington, D.C.}
    title = {Measuring the Mechanisms of Informal Family Insurance},
    url = {https://paa.confex.com/paa/2016/mediafile/ExtendedAbstract/Paper6677/hlthtrans_paa%20abs_dalton_lafave2015.pdf},
    abstract = {We combine unique panel data linking extended families in the Panel Study of Income Dynamics main interviews with recent supplements on family transfers and disability and time use to further understand the role played by specific family members, time transfers, and monetary transfers in insuring consumption against declining health. We exploit recently released 2013 Roster and Transfer data to assess specific hypotheses concerning the transfers between family members to examine how issues such as gender, physical distance, and genealogical distance impact both upstream and downstream transfers in terms of insuring consumption. We then combine family, health, and transfer data with the Disability and Use of Time (DUST) time diaries to examine the substitutability or complementarity of time and monetary transfers, and how family members spending time with their disabled relatives may help smooth consumption.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {LaFave, Daniel and Dalton, Michael},
    month = may,
    year = {2016}
}

@inproceedings{lin_division_2016,
    address = {Washington, D.C.}
    title = {Division of Parental Care Among Siblings},
    url = {https://paa.confex.com/paa/2016/mediafile/ExtendedAbstract/Paper7286/PAA2016_DAW_IFL_siblings.pdf},
    abstract = {Children are a major source of assistance to elderly parents with care needs, and a large literature addresses the theoretical underpinnings and empirical regularities of this phenomenon. Much of the empirical literature on parent care addresses the behavior of individual children, overlooking the interdependent nature of family decision making. Recent conceptualizations of this decision making process adopt a bargaining framework, yet few empirical studies have attempted to quantify the cross-sibling feedback implied by these frameworks.

We use data from the 2011 National Health and Aging Trends Study to model cross-sibling interdependence in the domain of parent care. We present preliminary findings from a simultaneous-logit model of a binary “any care” outcome, and from a simultaneous-Tobit model of a continuous hours-of-care outcome. At present our findings are limited to two-child families. Our preliminary results show, somewhat surprisingly, positive feedback for the binary care outcome, but negative feedback for the hours-of-care outcome.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {},
    month = may,
    year = {2016}
}

@inproceedings{ishizuka_intensive_2016,
    address = {Washington, D.C.}
    title = {Intensive Mothering or Intensive Parenting? How Gender Shapes Parenting Attitudes },
    url = {https://paa.confex.com/paa/2016/mediafile/ExtendedAbstract/Paper5678/Ishizuka%20-%20Intensive%20Mothering%20or%20Intensive%20Parenting.pdf},
    abstract = {Despite a gender convergence in paid work time, mothers continue to spend significantly more time with children than fathers. Explanations for gender differences in parenting behaviors are divided between preference- and constraint-based theories, with each making different predictions about parenting attitudes. Preference theories contend that cultural expectations of intensive mothering explain gender differences in parenting behaviors. Constraint theories argue, in contrast, that parents hold gender egalitarian ideals, but fall back on traditional gender specialization because of institutional constraints such as inflexible jobs or a lack of affordable, high-quality child care. However, we currently lack compelling empirical evidence testing the attitudinal foundations of each theory. Using data from an original vignette survey experiment conducted with a large, nationally representative sample of parents, this experiment provides a comprehensive test of the attitudinal assumptions of preference and constraint theories.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Ishizuka, Patrick},
    month = may,
    year = {2016}
}

@inproceedings{maralani_maternal_2016,
    address = {Washington, D.C.}
    title = {Maternal Age, Family Income Dynamics, and Child Investment},
    url = {https://paa.confex.com/paa/2016/mediafile/ExtendedAbstract/Paper5678/Ishizuka%20-%20Intensive%20Mothering%20or%20Intensive%20Parenting.pdf},
    abstract = {Inequalities in children’s outcomes by family income have grown considerably. Family resources and family structure, however, are closely intertwined. This study shows the contribution of maternal age and marriage to family income in childhood and early childhood investment. I examine the advantages that accrue in families when women start families at older ages, even for families with highly educated parents. Using 30 years of years of longitudinal data from the NLSY, I show differences in family income dynamics across children’s first five years of life by maternal age and parental education. I also examine differences in reading daily to young children by maternal age and parental education. The results show that inequalities in family resources and child investment are linked to parental education and family income through a set of demographic mechanisms that produce families of origin with older but richer parents who invest in their children at young ages.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Maralani, Vida},
    month = may,
    year = {2016}
}

@inproceedings{tach_how_2017,
    address = {Chicago, IL},
    title = {How Cash Transfers Shape Financial Investments in Children: The Case of the Earned Income Tax Credit},
    url = {https://paa.confex.com/paa/2017/mediafile/ExtendedAbstract/Paper13318/PAA%20EITC%20Child%20Exp.pdf},
    abstract = {Family income affects children’s wellbeing and shapes the intergenerational transmission of inequality. Government transfers have the potential to mitigate this process, but little is known about the precise mechanisms through which children benefit from cash transfers. This study uses data from the 1996-2015 Consumer Expenditure Surveys to investigate how the Earned Income Tax Credit (EITC)—the largest cash antipoverty program in the U.S.—affects parents’ spending on children. Exploiting exogenous variation in the timing of tax refunds, we estimate difference-in-differences models and find that EITC-eligible families increase expenditures on children significantly during the modal months of EITC receipt—by about ten percent—relative to ineligible families. This result is not driven by expenditures on education or luxuries but by enrichment items, and to a lesser extent basic necessities. We conclude that cash transfers have served as an equalizing force amid growing inequality in parental investments in children.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Amorim, Mariana and Tach, Laura and Halpern-Meekin, Sarah},
    month = may,
    year = {2017}
}

@inproceedings{,
    address = {Chicago, IL}
    title = {Men's Childcare: A Comparative Study of Fathers' Parental-Leave Use in Sweden and Finland},
    url = {https://paa.confex.com/paa/2017/mediafile/ExtendedAbstract/Paper11904/FathersPAA2017.pdf},
    abstract = {Parental leave policies increasingly include quotas for fathers to promote shared childcare and gender equality. We investigate fathers’ leave use in two countries with different constructions of quotas for fathers, Finland and Sweden, with the aim to explain differences in use by variations in policy set-up. One important difference is for instance the larger flexibility in terms of use in Sweden. We use detailed longitudinal register microdata for first births between 1999 and 2009. These data include sociodemographic variables where parents and children are linked, as well as data on income and parental benefits on an annual basis. We use linear probability models to estimate the propensity to use parental leave among fathers in the two countries. Preliminary results indicate large differences also when factors such as income level of the household is considered.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Duvander, Ann-Zofie and Mussino, Eleonora and Tervola, Jussi},
    month = may,
    year = {2017}
}

@inproceedings{busetta_statistical_2017,
    address = {Chicago, IL}
    title = {Statistical and Taste-Based Discrimination: What Affects Immigrants the Most in Finding a Job in Italy?},
    url = {https://paa.confex.com/paa/2017/mediafile/ExtendedAbstract/Paper15548/Statistical%20and%20Taste%20Based%20Discrimination_paa.pdf},
    abstract = {Several field experiments have demonstrated the existence of discrimination in labor markets against specific minority groups. In this paper using a correspondence test and a Probit analysis, we studied whether there is a preference for Italian candidates over foreigners and, if so, whether it depends on gender, type of work, education level. The aim is to determine if discrimination is due to prejudice against foreign applicants. Three groups of identical fictitious résumés, are sent in response to real online job offers:Italian, First generation foreigners, second generation foreigners. Therefore we estimated the impact of ethnic origin on individual’s employability, stressing the first stage of the hiring process. Results reveal a significant discrimination against foreigners. Even if we want to admit a rational discrimination based on perceived productivity difference (statistical discrimination), against first generation foreign candidates and concerning language and education gaps, the same would not be reasonable for second generation candidates.},
