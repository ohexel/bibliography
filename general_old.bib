@inproceedings{jonsson_putting_2019,
	address = {Austin, TX},
	title = {Putting the {Grandparents} to {Rest}: {False} {Positives} in {Multigenerational} {Mobility} {Research}},
	url = {http://paa2019.populationassociation.org/uploads/191931},
	abstract = {This paper uses uniquely comprehensive and detailed administrative data on Swedish lineages to shed light on the multigenerational transmission of economic status. Substantial three-generation correlations in long-run income are found. However, the apparent influence of grandparents is almost entirely mediated by socioeconomic correlates other than income in the middle generation, including education (level and field of study), social class, occupation, and wealth. We search exhaustively for heterogeneity in the contribution of grandparents – especially, stronger persistence at the top and bottom – but uncover little influence beyond that transmitted via parents. Finally, we show how an impressive range of spurious results can be generated when data are sparser, or discretion is exerted in model selection. This does not rule out a direct influence of grandparents in contexts other than that studied here, but it does cast doubt on the potential of standard designs to distinguish such influence from model artefacts.},
	urldate = {2019-11-16},
	publisher = {Population Association of America},
	author = {Jonsson, Jan O. and Engzell, Per and Mood, Carina},
	month = apr,
	year = {2019}
}

@inproceedings{finnigan_moderating_2019,
    address  = {Austin, TX},
    title = {The {Moderating} {Role} of {Wealth} for {Intergenerational} {Income} {Persistence} by {Race}/{Ethnicity}},
    url = {http://paa2019.populationassociation.org/uploads/191802},
    abstract = {Income and wealth exhibit strong intergenerational persistence, and both are highly stratified by race/ethnicity. Past research tends to examine racial/ethnic disparities in income and wealth separately, but this study conceptualizes economic security as combinations of income and wealth. I examine the intergenerational transmission of racial/ethnic differences in economic security from childhood to young adulthood using data from the 1997 cohort of the National Longitudinal Survey of Youth. When predicting adult economic security, I find that high parental net worth compensates for low parental income for White children. There is some compensation for Black children but to a weaker degree. Latino/a children are especially upwardly mobile, but parental net worth has little association with adult economic security net of parental income. Overall, the results demonstrate that Black and Latino/a children have much lower economic security than White children, and that economic security is less likely to be reproduced in adulthood.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Finnigan, Ryan},
    month = apr,
    year = {2019}
}

@inproceedings{bloome_rising_2019,
    address = {Austin, TX},
    title = {Rising {Tides} {Lift} {Which} {Boats}? {Connecting} {Absolute} and {Relative} {Mobility} {Across} {Generations}},
    url = {http://paa2019.populationassociation.org/uploads/193916},
    abstract = {In assessing the extent to which individuals escape childhood disadvantages (or maintain childhood advantages), researchers often study relative mobility across generations (individuals' movements up or down the income rankings from their parents' position). Yet many people experience absolute income gains across generations without upward relative mobility. This paper explores the connection between absolute and relative mobility. I show how absolute mobility depends on relative mobility at the population level, in addition to economic growth and income inequality. I connect these population-level absolute and relative mobility patterns to individual-level mobility experiences. Finally, I propose measures to characterize the joint distribution of individual-level absolute and relative mobility experiences. Using National Longitudinal Survey of Youth data, I describe these joint mobility experiences, including the probability of experiencing upward absolute mobility without upward rank mobility. People from advantaged demographic groups appear particularly likely to enjoy this experience of floating with the rising tide.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Bloome, Deirdre},
    month = apr,
    year = {2019}
}

@inproceedings{sakamoto_declining_2019,
    address = {Austin, TX},
    title = {The {Declining} {Significance} of {Occupational} {Contingency} {Tables} in the {Study} of {Intergenerational} {Mobility}},
    url = {http://paa2019.populationassociation.org/uploads/190092},
    abstract = {The study of intergenerational mobility was once viewed as a quintessentially sociological topic that was widely investigated using occupational mobility tables. However, the popularity of occupational mobility tables seems to be rapidly dwindling. This change is associated with the increasing popularity of the economic approach to modeling intergenerational mobility which is not encumbered by the shortcomings of occupational mobility tables. We discuss these limitations which have not received adequate attention in prior literature. Younger sociologists are now abandoning occupational mobility tables—despite their once great popularity—in favor of economic models. The advantages of latter must indeed be considerable given that this switchover would normally be penalized as a lack of disciplinary ``loyalty.''},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Sakamoto, Arthur and Wang, Sharon X.},
    month = apr,
    year = {2019}
}

@inproceedings{oh_promise_2019,
    address = {Austin, TX},
    title = {Broken {Promise} of {College}: {New} {Educational} {Mechanisms} for the {Intergenerational} {Earnings} {Association} in the 21st {Century}},
    url = {http://paa2019.populationassociation.org/abstracts/190613},
    abstract = {Previous studies have shown that intergenerational socioeconomic association becomes weaker as children’s education level increases and is negligible among college graduates. A college degree is known as the great equalizer for intergenerational social mobility. Recent studies, however, reported that the strong intergenerational association reemerges among advanced degree holders. We examine the mechanisms behind the reemergence of the intergenerational association at the post-baccalaureate level using the 2010, 2013, 2015, and 2017 National Survey of College Graduates data. Our results show that the strong intergenerational socioeconomic immobility among advanced degree holders is fully attributable to three educational sorting mechanisms: children from high-SES families (1) obtain expensive and financially rewarding advanced degrees, (2) attend selective institutions and major in hyper-lucrative fields of study such as law and medicine in graduate school, and (3) complete their education at a younger age and enjoy income growth over more years in the labor market.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Oh, Byeongdon and Kim, ChangHwan},
    month = apr,
    year = {2019}
}

@inproceedings{sariscsany_gender_2019,
    address = {Austin, TX},
    title = {The {Gender} {Wealth} {Gap} in the {United} {States}, 2008-2013},
    url = {http://paa2019.populationassociation.org/uploads/191255},
    abstract = {There has been extensive research on the gender wage gap in the U.S. However, limited research has examined gender disparities in wealth. This study begins to fill in this gap by providing the first nationally representative analysis of the gender wealth gap among unmarried and married individuals using the 2008 Panel of the Survey of Income and Program Participation. The paper descriptively examines the degree to which the gender wealth gap exists in the US and how the gap differs by household structure, age, parental status, and race. Preliminary findings show that the gender wealth gap is significant among both married and unmarried individuals. The gap is larger among the married as compared to never married. Married men own an average of USD30,000 more wealth than married women. These results are particularly poignant considering that previous research examining the gender wealth gap in the US have excluded married individuals.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Sariscsany, Laurel},
    month = apr,
    year = {2019}
}

@inproceedings{pfeffer_effects_2019,
    address = {Austin, TX},
    title = {The {Effects} of {Social} {Mobility} on {Individual} {Well-being}, {Attitudes}, and {Behavior}: {A} {Bounding} {Approach}},
    url = {http://paa2019.populationassociation.org/uploads/190796},
    abstract = {Researchers have long sought to estimate the effects of intergenerational socioeconomic mobility in a range of individual outcomes. There is also widespread public speculation about the role of downward mobility in explaining political upheaval. However, the empirical study of mobility effects faces a fundamental methodological challenge: The linear dependency among among social origin (O), destinations (D), and social mobility (M=D-O), prohibits the use of conventional statistical methods to estimate the unique contributions of the three variables to any given outcome. This paper applies a novel non-parametric bounding approach to partially identify the effects of social mobility. We study the effects of absolute mobility on a range of individual outcomes, such as socio-psychological well-being, political attitudes, fertility, and health. Results indicate that – in contrast to findings from a number of recent studies – the effects of social mobility on individual outcomes are large.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Pfeffer, Fabian T. and Fosse, Ethan},
    month = apr,
    year = {2019}
}

@inproceedings{greatorex-voith_success_2019,
    address = {Austin, TX},
    title = {Can {Success} {Bring} {Distress}? {Gendered} {Mobility} {Effects} {Among} {Men} and {Women}},
    url = {http://paa2019.populationassociation.org/uploads/193086},
    abstract = {Health outcomes often follow a social gradient; outcomes at the top of the socioeconomic ladder tend to have lower morbidity and mortality than those at the bottom. However, cross-sectional studies may mask mobility processes with counter-intuitive effects. Recent literature suggests upward mobility may negatively impact health outcomes associated with prolonged exposure to stressors. Using the Wisconsin Longitudinal Study, I explore heterogeneity in psychological distress levels among upwardly-mobile men and women and find that upwardly mobile individuals most resemble the mean psychological distress levels of their destination class. However, there is greater variation in distress outcomes among those with “extreme” mobility pathways, such as those who move from the bottom income quintile to the top income quintile. Upwardly mobile women tend to experience greater levels of psychological distress. This study indicates that psychological distress outcomes are sensitive to how we measure social class, as well as how we estimate social mobility.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Greatorex-Voith, Siobhan},
    month = apr,
    year = {2019}
}

@inproceedings{luo_gender_2019,
    address = {Austin, TX},
    title = {Gender and {Race} {Differences} in {Intergenerational} {Mobility} {Effects}: {Improved} {Method} and {New} {Evidence}},
    url = {http://paa2019.populationassociation.org/uploads/190562},
    abstract = {Intergenerational mobility and its consequences on individuals' attitudes, behaviors, and various outcomes have been a central topic in sociological and demographic research. Based on a critical assessment of previous methods that often impose simple yet unrealistic constraints, we propose a new method, called ``mobility contrast model'', for estimating and examining the effects of intergenerational mobility. This new method is flexible enough to allow an investigation of the heterogeneous effects of mobility between mobile groups depending on their origin and destination status. Using this analytical tool to analyze the data from the General Social Survey 1974-2016, we show important gender and race differences in mobility effects.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Luo, Liying and Warren, John Robert Warren},
    month = apr,
    year = {2019}
}

@inproceedings{yaish_educational_2019,
    address = {Austin, TX},
    title = {Intergenerational {Educational} {Mobility} and {Life} {Course} {Income} {Trajectories} in the {United} {States}},
    url = {http://paa2019.populationassociation.org/uploads/191536},
    abstract = {Motivate by a theoretical perspective of the cumulative advantage, we examine intergenerational educational mobility and its consequences for life-course income trajectories. Instead of focusing on the overall educational association between two generations, we classify respondents into four distinctive groups depending on whether their parents and they had college education, respectively: upward and downward mobile, immobile in college and in non-college levels. Then, we link intergenerational educational mobility into life-course income trajectories by comparing how four mobility groups differ in their evolution of income from the age 25 to 50. We apply growth models to two longitudinal data (PSID and NLSY79) of black and white men and women. Preliminary results indicate that educational reproduction is the dominant pattern. Moreover, income trajectories of the four mobility groups have evolved differently over time, resulting in widening inequality over the life course among the groups. Intergenerational educational mobility bears important consequences for income trajectories.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Yaish, Meir and Shiffer-Sebba, Doron and Gabay-Egozi, Limor and Park, Hyunjoon},
    month = apr,
    year = {2019}
}

@inproceedings{hotz_disparities_2019,
    address = {Austin, TX},
    title = {Disparities in {Mortality} and {Its} {Consequences} for {Kin} {Availability} and {Intergenerational} {Transfers} in the {United States}},
    url = {http://paa2019.populationassociation.org/uploads/193535},
    abstract = {In this paper, we pursue and expand the literature on mortality disparities, kin availability, and intergenerational transfers by considering two substantive questions:1) How do disparities in mortality affect the distribution of “kin availability” across demographic groups in the United States? In particular, how does the absence of one’s parents due to death affect the availability of kin – where the latter is traditionally measured by the spatial proximity of kin – by race/ethnicity, educational attainment and geography? 2) How does the absence or reduction in the number of one’s parents due to death affect the types, incidence and magnitudes of financial and time transfers to and from one’s parents? We use the 2013 Panel Study of Income Dynamics (PSID) main interview and the Rosters and Transfers Module data that provide for a national sample of household heads and spouses, the residential locations of each living biological or adoptive parent.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Hotz, V. Joseph and Choi, HwaJung and Schoeni, Robert and Seltzer, Judith A. and Wiemers, Emily},
    month = apr,
    year = {2019}
}

@inproceedings{bonnet_wealth_2019,
    address = {Austin, TX},
    title = {Wealth {Inequalities} {Among} {Seniors}: {The} {Increasing} {Role} of {Marital} {Histories}},
    url = {http://paa2019.populationassociation.org/uploads/192897},
    abstract = {Wealth accumulation is the result of several factors: saving behaviors, work and marital histories. In line with the increasing diversity of marital histories and recent literature on gender inequality in wealth, this paper explores the specific contribution of marital histories to seniors wealth accumulation. We focus on individuals aged 50 or more and assume that marital and labor market life courses interact, especially among women, for whom labor supply is more elastic to family arrangements. Using data from household wealth surveys conducted in France in 2004, 2009 and 2014, we evaluate the contribution of marital histories to individual wealth across different birth cohorts. For 50 and over, the accumulated wealth depends more on marital history than on professional history, especially for women. Large inequalities in wealth by past marital history are found among single women in recent cohorts: married and widow being wealthier, than divorced, separated or always single.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Bonnet, Carole and Martino, Enrica Maria and Rapoport, Beno\^it and Solaz, Anne},
    month = apr,
    year = {2019}
}

@inproceedings{erola_assortative_2019,
    address = {Austin, TX},
    title = {How {Much} {Does} {Assortative} {Mating}, {Status} {Exchange} and {Being} {Single} {Contribute} to {Household} {Income} {Inequality} {The} {Case} of {Finland}, 1987-2014},
    url = {http://paa2019.populationassociation.org/uploads/192225},
    abstract = {Previous studies covering developed countries suggest that changes in educational homogamy have contributed only a little to the changes in income inequality. We consider two potential reasons for the zero effects: the growing proportion of single adult households and status exchange between own education and parental background in the partnership market. We study these assumptions using register data on men’s and women’s income inequalities, education and parental class background in Finland 1987–2014. Income inequality is measured by the Theil index. The results suggest that selection into partnership covers most of the contribution of educational assortative mating on income inequality. Partnership homogamy explains a growing proportion of the between-group inequality linked to educational assortative mating. Status exchange plays a role, but the overall assortative mating by family background seems to be a more important factor contributing to income inequality. Over time, its role in income inequality seems to have remained steady.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Erola, Jani and Kilpi-Jakonen, Elina},
    month = apr,
    year = {2019}
}

@inproceedings{kye_supports_2019,
    address = {Austin, TX},
    title = {Who {Supports} the {Elderly} {Parents} in {Need}? {The} {Structure} of {Active} and {Latent} {Intergenerational} {Ties}  in {Korea}},
    url = {http://paa2019.populationassociation.org/uploads/190440},
    abstract = {We test the “latent kin network” hypothesis by considering both active and latent structures of intergenerational exchange in Korea. We first examine active intergenerational ties using the Latent Class Analysis. Then, we test how each latent classes differently react to family members’ needs by using the longitudinal data. We found that active intergenerational ties are greatly stratified by families’ socioeconomic backgrounds. While wealthier families have strong emotional bonds between parents and children regardless of their financial exchanges, poorer families have both lower emotional bonds and less frequent financial exchanges. Financial exchanges are prompted when there is an imbalance between parents’ and children’s economic resources. We also found that latent intergenerational ties emerge only when parents actually need support and children have economic resources. Therefore, the structure of latent intergenerational ties also greatly depends on families’ socioeconomic resources.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Kye, Bongoh and Choi, Yool and Lee, Wangwon},
    month = apr,
    year = {2019}
}

@inproceedings{istenic_regimes_2019,
    address = {Austin, TX},
    title = {Welfare {Regimes} and {Organization} of the {Transfer} {Systems} in 25 {EU} {Countries}},
    url = {http://paa2019.populationassociation.org/uploads/191438},
    abstract = {The economic life cycle and its financing strongly depend on country specific institutional and cultural settings. Therefore, it can be expected that the cross-country differences in intergenerational flows are connected with the differences in the welfare regimes. Previous research on transfer and welfare regimes is limited, because it focuses mainly on either private or public transfers or it takes into account only certain age groups. This paper uses the National Transfer Accounts (NTA) methodology that enables comprehensive measurement of intergenerational transfers, as well as it takes into account all the age groups. Our analysis provides comparable NTA results for 25 EU countries from 2010 and links welfare and inter age reallocation regimes. We perform cluster analysis based on five indicators, measuring importance of different types of age reallocations and differences in gender equality promotion. We end up with three different groups of countries showing a clear north-south division of countries.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Istenic, Tanja and Sambt, Joze},
    month = apr,
    year = {2019}
}

@inproceedings{kim_comparison_2019,
    address = {Austin, TX},
    title = {Cross-National {Comparison} of {Patterns} of {Intergenerational} {Relations}},
    url = {http://paa2019.populationassociation.org/uploads/191473},
    abstract = {This study identified and compared patterns of intergenerational relations across China, South Korea, and the U.S. that have different family culture and policies. We examined factors associated with various intergenerational relations. Data came from three harmonized datasets of international aging and retirement studies collected between 2010 and 2011. We restricted our sample to family respondents over 60-years with at least one child (N=4,937 China; N=5,095 South Korea; N=3,625 the U.S.) Nine variables related to intergenerational relations were used: the number of sons and daughters, living arrangements, contact frequency (face-to-face and email/phone contact), physical and financial help from/to children. Latent Class Analysis identified four or five clusters as the most optimal classification including Interdependent, Helping, Dependent, Independent, and Separated Parents. The proportions and the characteristics of each intergenerational profile cluster significantly differed across countries. This study confirms that various perspectives of intergenerational relations were influenced by social and cultural contexts.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Kim, BoRin and Kwak, Minyoung and Lee, Hyunjoo and Park, Sojung},
    month = apr,
    year = {2019}
}

@inproceedings{ganzeboom_occupational_2018,
    address = {Denver, CO},
    title = {Intergenerational {Occupational} {Reproduction} in {Comparative} {Perspective}: {Cross-sectional} and {Over-time} {Variation} in 56 {Societies}},
    url = {https://paa.confex.com/paa/2018/meetingapp.cgi/Paper/23981},
    abstract = {We extend a large scale comparison of intergenerational occupational mobility tables published by Ganzeboom, Treiman & Luijkx (1989). We extend the coverage of societies from 35 to 56, extend the time period through 2014, and separately analyze men and women. We analyze about five times as much data as previously, which permits us to get a fairly precise estimate of trends, separately for men and women.. We find that in never communist nations, the trend is consistently toward greater mobility, although there is a suggestion of a reversal in very recent years for men. In communist nations there was a sharper increase in mobility over the course of the communist period but this trend was reversed during the first 10 years of post-communism, bringing these nations in line with the rest of the world.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Ganzeboom, Harry and Treiman, Donald and Luijkx, Ruud},
    month = apr,
    year = {2018},
    notes = {https://paa.confex.com/paa/2018/mediafile/ExtendedAbstract/Paper23981/PAA2018_GLT2.pdf}
}

@inproceedings{kye_occupational_2018,
    address = {Denver, CO},
    title = {Intragenerational {Occupational} {Mobility} in {South} {Korea}, 1998-2015},
    url = {https://paa.confex.com/paa/2018/meetingapp.cgi/Paper/21700},
    abstract = {We investigate intragenerational mobility in South Korea during the era of rising inequality by applying a micro-class approach. A recent study shows that rising intragenerational mobility partly countervailed the implications of rising inequality for social mobility in the U.S. (Jarvis and Song 2017). Given the strong internal labor markets and the gendered career patterns, the Korean patterns may differ. Preliminary analyses show the followings. First, intragenerational mobility exhibits a stable or fluctuating trend during the period of rising inequality. It leads us to reconsidering the relationship between inequality and mobility. Second, men’s mobility pattern was stabilized as they aged, but women’s pattern was not. Interestingly, long-distance mobility was common among women reflecting frequent career disruptions. Occupational segregation by gender and women’s burden associated with family formation is responsible for the gender difference. We discuss the implications of these findings for inequality, mobility, and gendered career trajectories.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Kye, Bongoh and Hwang, Sun-Jae and Choi, Yool and Kim, Ji Yeon},
    month = apr,
    year = {2018},
    notes = {https://paa.confex.com/paa/2018/mediafile/ExtendedAbstract/Paper21700/Kye%20et%20al_PAA2018_submission.pdf}
}

@inproceedings{bucca_differences_2018,
    address = {Denver, CO},
    title = {{Black-White} {Differences} in {Intergenerational} {Mobility} in the {United} {States}: {Evidence} from {Heterogeneity} in {Sibling} {Correlations}},
    url = {https://paa.confex.com/paa/2018/meetingapp.cgi/Paper/19084},
    abstract = {This article studies Black-White differences in social mobility in the US. In particular, it asks three inter-related questions: (1) Does the sibling correlation (SC) in income differ for Blacks and Whites? (2) If so, is it because the effect of family background is different for Blacks and Whites or because they produce different extents of within-family heterogeneity? (3) Are Black-White differences in SC due to race-related factors or they reflect the underlying socioeconomic characteristics of these two sub-populations? Using PSID data and Bayesian HLM with ``organized dispersion'' I find that Black-White differences in SC (for men) are mostly explained by the higher within-family heterogeneity of Black siblings. This is partly -but not entirely- driven by the poorer socioeconomic standing of Black families. Results highlight the interaction between race and social background at producing differences in mobility for the two major racial groups in the US.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Bucca, Mauricio},
    month = apr,
    year = {2018}
}

@inproceedings{killewald_richer_2018,
    address = {Denver, CO},
    title = {For {Richer}: {The} {Effects} of {Marriage} on {Wealth} {Accumulation}},
    url = {https://paa.confex.com/paa/2018/meetingapp.cgi/Paper/21495},
    abstract = {We investigate the effects of marriage on individuals’ midlife wealth. Establishing the importance of marriage as a wealth-generating process is challenging because marriage and wealth are dynamic processes with reciprocal effects: marriage is both the result of prior wealth and a potential determinant of future wealth. To estimate the total causal effect of years spent married on wealth, we therefore apply marginal structural models. Using the NLSY79, we show that time spent married has positive effects on individuals’ wealth at midlife but that accounting for dynamic selection into and out of marriage reduces these effects substantially. Ignoring the asset-pooling effect of marriage, the effects of marriage on wealth are small. However, the effects are also heterogeneous: women and whites gain more in absolute terms from each additional year spent married than do men and African Americans.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Killewald, Alexandra and Pfeffer, Fabian T.},
    month = apr,
    year = {2018},
    notes = {https://paa.confex.com/paa/2018/mediafile/ExtendedAbstract/Paper21495/KillewaldPfeffer_ForRicher_April2018.pdf}
}

@inproceedings{easley_inheriting_2018,
    address = {Denver, CO},
    title = {Inheriting {Disadvantage}: {The} {Experience} of {Negative} {Life} {Events} and {Racial} {Differences} in {Wealth} {Mobility}},
    url = {https://paa.confex.com/paa/2018/meetingapp.cgi/Paper/23524},
    abstract = {This project will utilize data from the Panel Study of Income Dynamics (PSID) to quantify the role of negative events on wealth accumulation both within and across multiple generations and to examine how these events impact racial differences in the transmission of wealth/ wealth mobility for subsequent generations. I argue that due to negative events, more of black wealth is spent insulating both generations from these events. Rather than utilizing wealth in its resource function, or as insurance for high risk/ high reward ventures, two functions that would promote further wealth accumulation, blacks are more likely to have to deplete these resources over time and to use them for purposes that do not promote subsequent wealth accumulation. For this study, I operationalize negative events as the length and number of unemployment events, as well as the length and number of negative debilitating health events.},
    urldate = {2019-11-16},
    publisher = {Population Association of America},
    author = {Easley, Janeria},
    month = apr,
    year = {2018},
    notes = {https://paa.confex.com/paa/2018/mediafile/ExtendedAbstract/Paper23524/Easley_Owning%20as%20Immigrant.pdf}
}

@inproceedings{percheski_inequalities_2018,
    address = {Denver, CO},
    title = {Racial {Inequalities} in {Wealth}: {The} {Unequal} {Impact} of the {Great} {Recession} on {Families} {With} {Children}},
    url = {https://paa.confex.com/paa/2018/meetingapp.cgi/Paper/22188},
    abstract = {Racial wealth gaps in the United States are very large and longstanding. We hypothesize that racial gaps in wealth may have widened during and after the Great Recession. Using the Survey of Consumer Finance, we examine racial differences in several measures of wealth between 2004 and 2013 for families with children. Whereas the Great Recession had almost no impact on the net worth of the wealthiest white families, it halved the net worth of the wealthiest Black and Hispanic families and decimated the net worth of the least wealthy families of every racial group. Post-recession, Black families had a median net worth of $0 in contrast to a median net worth of $77, 250 for white families. Regression analyses show that wealth differences between white families and racial minority families were greater in 2013 than before the Great Recession, even after taking into account differences in earnings and demographic characteristics.},
