@inproceedings{washbrook_gaps_2017,
    address = {Chicago, IL},
    title = {Income {Gaps} in {Early} {Childhood} {Cognitive} {Development}: {Why} {Are} {They} {Larger} in the {United} {States} {Compared} to the {United Kingdom}, {Australia}, and {Canada}},
