}

@inproceedings{mcdonnell_traditional_2018,
    address = {Denver, CO}
    title = {More Traditional or More Family-Oriented? Changes in Men’s Attitudes Across the Transition to Parenthood},
    url = {https://paa.confex.com/paa/2018/meetingapp.cgi/Paper/23549},
    abstract = {Previous research finds that men’s gender ideologies become more traditional when they have a child. However, existing indicators of gender ideology disproportionately focus on women’s roles. When attitudes towards men’s work and family roles are ignored, a man who becomes more family-oriented can be confused with a man who increasingly supports traditional gender roles. Using GGP data for six European countries, I examine how becoming a father changes men’s attitudes in four domains: fatherhood, motherhood, couple-level power dynamics, and gender roles in the public sphere. I find that becoming a father leads men to value motherhood and fatherhood more highly but does not change attitudes towards couple-level power dynamics or gender roles in the public sphere. This indicates that becoming a father affects family-orientedness rather than gender ideology. Results also suggest that increased family-orientedness may drive previous research findings that becoming a father makes men more traditional.},
